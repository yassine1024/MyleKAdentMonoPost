                  <Font name="System Bold" size="15.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="30.0" />
               </GridPane.margin>
            </Label>
            <Separator prefHeight="4.0" prefWidth="419.0" />
            <HBox alignment="TOP_RIGHT" prefHeight="84.0" prefWidth="117.0" GridPane.columnIndex="2">
               <children>
                  <fx:include source="../login/LoginBar.fxml" />
               </children>
               <padding>
                  <Insets bottom="45.0" left="50.0" />
               </padding>
            </HBox>
            <JFXTextArea fx:id="reasonExpense" labelFloat="true" prefHeight="154.0" prefWidth="240.0" promptText="Motif de dépense" style="-fx-text-inner-color: white;" unFocusColor="#a4bc2c" GridPane.columnIndex="1" GridPane.rowIndex="2" />
